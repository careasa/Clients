<script>
    document.addEventListener("DOMContentLoaded", () => {
        const savedNotes = JSON.parse(localStorage.getItem("notes")) || [];
        savedNotes.forEach((note) => displayNote(note));
    });

    function addNote(){
        const clientNotes = document.getElementById("clientNotes").value;

        if (clientNotes.trim()) {
            const savedNotes = JSON.parse(localStorage.getItem("notes")) || [];
            savedNotes.push(clientNotes);
            localStorage.setItem("notes", JSON.stringify(savedNotes));

            displayNote(clientNotes);

            document.getElementById("clientNotes").value = "";
        } else {
            alert("Please enter a note before adding!");
        }
    };

    function displayNote(noteText) {
        const notesList = document.getElementById("notesList");

        const noteDiv = document.createElement("div");
        noteDiv.className = "p-4 bg-[#f1f1f1] border border-gray-300 rounded-lg shadow text-black";

        noteDiv.textContent = noteText;

        notesList.appendChild(noteDiv);
    };

</script>

